{
    "name": "LearnSim",
    "n_gpu": 3,

    "arch": {
        "type": "SimEnc",
        "args": {
	    "init_type": "SSD",
            "s": 1
        }
    },

    "data_loss": {
        "type": "SSD",
        "args": {}
    },
    "reg_loss": {
        "type": "RegLossL2",
        "args": {
            "diff_op": "GradientOperator"
        }
    },
    "entropy": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 5e-4
        }
    },
    "optimizer_f": {
        "type": "Adam",
        "args": {
            "lr": 5e-4
        }
    },
    "optimizer_phi": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/biobank_test_large/",
            "batch_size": 6,
            "num_workers": 18,
            "shuffle": true
        }
    },

    "trainer": {
        "epochs": 1000,
        "no_samples": 3,
	    "no_steps_v": 128,

	"learn_var_params": true,
	"learn_sim_metric": true,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
