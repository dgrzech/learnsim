{
    "name": "mcmc_lcc_sobolev",
    "n_gpu": 1,

    "data_loss": {
        "type": "LCC",
        "args": {
            "s": 3
        }
    },
    "reg_loss": {
        "type": "RegLossL2",
        "args": {
            "diff_op": "GradientOperator",
            "w_reg": 0.5
        }
    },
    "entropy_loss": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF_3D",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
            "amsgrad": true
        }
    },
    "optimizer_mala": {
        "type": "SGD",
        "args": {
            "lr": 1e-4
        }
    },


    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/learnsim_biobank_train/biobank_1/",
            "dim_x": 128,
	        "dim_y": 128,
	        "dim_z": 128,
            "batch_size": 1,
            "num_workers": 1,
            "shuffle": false
        }
    },

    "sobolev_grad": {
        "enabled": true,
	    "s": 7,
	    "lambda": 0.5
    },

    "trainer": {
        "no_iters_vi": 16384,
        "no_iters_burn_in": 100000,
	    "no_samples": 500000,

        "log_period": 512,
        "tensorboard": true,
        "verbosity": 2,

        "save_dir": "saved/",
        "save_period": 512
    }
}
