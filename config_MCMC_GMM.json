{
    "name": "mcmc_gmm_sobolev",
    "n_gpu": 1,

    "data_loss": {
        "type": "GaussianMixtureLoss",
        "args": {
	        "num_components": 4,
            "s": 3
	    }
    },
    "scale_prior": {
        "type": "ScaleLogNormalPrior",
        "args": {}
    },
    "proportion_prior": {
	    "type": "DirichletPrior",
	    "args": {
	        "num_classes": 4,
	        "alpha": 0.5
	    }
    },
    "reg_loss": {
        "type": "RegLossL2",
        "args": {
            "diff_op": "GradientOperator",
            "w_reg": 0.1
        }
    },
    "entropy_loss": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF_3D",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 5e-4
        }
    },
    "optimizer_mala": {
        "type": "SGD",
        "args": {
            "lr": 1e-4
        }
    },


    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/learnsim_biobank_train/biobank_1/",
            "dim_x": 96,
	        "dim_y": 96,
	        "dim_z": 96,
            "batch_size": 1,
            "num_workers": 1,
            "shuffle": false
        }
    },

    "sobolev_grad": {
        "enabled": true,
	    "s": 7,
	    "lambda": 0.5
    },

    "vd": true,

    "trainer": {
        "no_warm_up_steps_sigma": 10,
        "no_warm_up_steps": 20,
        "reinit_every": 5,

        "no_iters_vi": 16384,
        "no_iters_burn_in": 20000,
	    "no_samples": 50000,

        "log_period": 64,
        "tensorboard": true,
        "verbosity": 2,

        "save_dir": "saved/",
        "save_period": 256
    }
}
