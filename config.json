{
    "name": "LearnSim",
    "n_gpu": 2,

    "arch": {
        "type": "SimEnc",
        "args": {
            "s": 7
        }
    },

    "data_loss": {
        "type": "SSD",
        "args": {}
    },
    "kl_loss": {
        "type": "KL",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "\/vol\/bitbucket\/dig15\/rgbd_data\/slavcheva\/Hat\/nii\/",
            "batch_size": 2,
            "shuffle": true,
            "num_workers": 8,
            "no_consecutive_frames": 5
        }
    },

    "optimizer_v": {
        "type": "SGD",
        "args": {
            "lr": 0.001
        }
    },
    "optimizer_phi": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "metrics": ["SSD"],

    "trainer": {
        "epochs": 4096,
        "no_samples": 6,
	    "no_steps_v": 224,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
