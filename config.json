{
    "name": "LearnSim",
    "n_gpu": 1,

    "arch": {
        "type": "SimEnc",
        "args": {}
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "\/vol\/bitbucket\/dig15\/rgbd_data\/slavcheva\/Hat\/nii\/",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 1,
            "no_consecutive_frames": 5
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "loss_function",
    "metrics": ["metric"],

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 4096,
        "no_samples": 4,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
