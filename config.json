{
    "name": "sg_mcmc",
    "n_gpu": 1,

    "data_loss": {
        "type": "GaussianMixtureLoss",
        "args": {
            "num_components": 4,
            "s": 3
	    }
    },
    "scale_prior": {
        "type": "LogScaleNormalPrior",
        "args": {
            "loc": 0.0,
		    "scale": 2.30
	    }
    },
    "proportion_prior": {
	    "type": "DirichletPrior",
	    "args": {
	        "num_classes": 4,
	        "alpha": 0.5
	    }
    },

    "reg_loss": {
        "type": "RegLoss_LogNormal",
        "args": {
            "diff_op": "GradientOperator",
	        "learnable": true,
            "loc_learnable": true,
	        "scale_learnable": true,
	        "w_reg": 0.2
        }
    },
    "reg_loss_prior_loc": {
    	"type": "LogEnergyExpGammaPrior",
	    "args": {
	        "w_reg": 0.2,
	        "dof": 2654208.0,
	        "learnable": false
	    }
    },
    "reg_loss_prior_scale": {
    	"type": "LogScaleNormalPrior",
	    "args": {
	        "loc": 2.7973,
	        "scale": 5.0
	    }
    },

    "entropy_loss": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF_3D",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 5e-3
        }
    },
    "optimizer_mala": {
        "type": "SGD",
        "args": {
            "lr": 1e-1
        }
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/datasets/mine/miccai_2020/biobank_1/",
            "dim_x": 96,
	        "dim_y": 96,
	        "dim_z": 96
        }
    },

    "sobolev_grad": {
        "enabled": true,
	    "s": 7,
	    "lambda": 0.5
    },

    "use_moving_mask": false,
    "vd": true,

    "trainer": {
        "no_iters_vi": 1536,
        "no_iters_burn_in": 2000,
	    "no_samples": 4000,

        "log_period": 64,
        "log_period_mcmc": 40,
        "tensorboard": true,
        "verbosity": 2,

        "save_dir": "saved/",
        "save_period": 128,
        "save_period_mcmc": 40
    }
}
