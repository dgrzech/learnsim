{
    "name": "LearnSim",
    "n_gpu": 1,

    "arch": {
        "type": "SimEnc",
        "args": {
	    "init_type": "LCC",
            "s": 4
        }
    },

    "data_loss": {
        "type": "LCC",
        "args": {}
    },
    "reg_loss": {
        "type": "RegLossL2",
        "args": {
            "diff_op": "GradientOperator"
        }
    },
    "entropy": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
	    "amsgrad": true
        }
    },
    "optimizer_f": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
	    "amsgrad": true
        }
    },
    "optimizer_phi": {
        "type": "Adam",
        "args": {
            "lr": 5e-4,
	    "amsgrad": true
        }
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/biobank_test_large/",
            "batch_size": 2,
            "num_workers": 6,
            "shuffle": true
        }
    },

    "trainer": {
        "epochs": 100,
        "no_samples": 2,
	    "no_steps_v": 128,

	"learn_q_v": true,
	"learn_q_f": true,
	"learn_sim_metric": true,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
