{
    "name": "LearnSim",
    "n_gpu": 1,

    "arch": {
        "type": "SimEnc",
        "args": {
	        "init_type": "LCC",
            "s": 5
        }
    },

    "data_loss": {
        "type": "LCC",
        "args": {}
    },
    "reg_loss": {
        "type": "RegLossL2",
        "args": {
            "diff_op": "GradientOperator"
        }
    },
    "entropy": {
        "type": "EntropyMultivariateNormal",
        "args": {}
    },

    "transformation_model": {
        "type": "SVF_3D",
        "args": {}
    },
    "registration_module": {
        "type": "RegistrationModule",
        "args": {}
    },

    "optimizer_v": {
        "type": "Adam",
        "args": {
            "lr": 4e-4,
	        "amsgrad": true
        }
    },
    "optimizer_f": {
        "type": "Adam",
        "args": {
            "lr": 4e-4,
	        "amsgrad": true
        }
    },
    "optimizer_phi": {
        "type": "Adam",
        "args": {
            "lr": 1e-4,
	        "amsgrad": true
        }
    },

    "data_loader": {
        "type": "LearnSimDataLoader",
        "args":{
            "data_dir": "/vol/bitbucket/dig15/learnsim_biobank_train/biobank_2/",
	        "dim_x": 128,
	        "dim_y": 128,
	        "dim_z": 128,
            "batch_size": 2,
            "num_workers": 2,
            "shuffle": true
        }
    },

    "trainer": {
        "epochs": 100,
        "no_samples": 2,
	    "no_steps_v": 256,

	    "learn_q_v": true,
	    "learn_sim_metric": true,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "tensorboard": true,
	    "log_step_q_v": 32
    }
}
