{
	"name": "learn2reg",
	"no_GPUs": 1,
	"model": {
		"type": "CNN_LCC",
		"args": {
			"learnable": true,
			"s": 1,
			"no_features": [4, 8, 8],
			"activation": {
				"type": "LeakyReLU",
				"args": {
					"negative_slope": 0.2
				}
			}
		}
	},
	"data_loss": {
		"type": "LCC"
	},
	"reg_loss": {
		"type": "RegLoss_L2",
		"args": {
			"diff_op": "GradientOperator",
			"w_reg": 2.0
		}
	},
	"entropy_loss": {
		"type": "EntropyMultivariateNormal"
	},
	"transformation_module": {
		"type": "SVFFD_3D",
		"args": {
			"cps": [3, 3, 3]
		}
	},
	"registration_module": {
		"type": "RegistrationModule"
	},
	"optimizer_LD": {
		"type": "SGD",
		"args": {
			"lr": 0.0001
		}
	},
	"optimizer_q_phi": {
		"type": "Adam",
		"args": {
			"lr": 0.00001
		}
	},
	"optimizer_q_v": {
		"type": "Adam",
		"args": {
			"lr": 0.01
		}
	},
	"data_loader": {
		"type": "Learn2RegDataLoader",
		"args": {
			"im_pairs": "/vol/biodata/data/learn2reg/2021/task03/pairs_val.csv",
			"dims": [192, 224, 160],
			"sigma_v_init": 0.5,
			"u_v_init": 0.1,
			"batch_size": 2,
			"no_im_pairs_per_epoch": 100,
			"no_workers": 2,
			"test": true
		}
	},
	"Sobolev_grad": {
		"enabled": true,
		"s": 3,
		"lambda": 0.5
	},
	"trainer": {
		"uniform_noise": {
			"enabled": true,
			"magnitude": 0.1
		},
		"no_epochs": 1,
		"no_iters_q_v": 1024,
		"no_samples_SGLD": 200,
		"no_samples_SGLD_burn_in": 100,
		"no_samples_test": 5,
		"log_period": 512,
		"log_period_model_samples": 100,
		"save_dir": "saved/"
	}
}
